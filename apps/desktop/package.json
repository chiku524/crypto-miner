{
  "name": "crypto-miner-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "VibeMiner desktop app â€” mine for networks that need you. No terminal required.",
  "author": "nico.builds",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:web": "npm run dev -w crypto-miner-web",
    "build": "electron-builder",
    "build:web": "npm run build -w crypto-miner-web",
    "start": "electron .",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "concurrently": "^8.2.2",
    "electron": "28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nicobuilds.vibeminer",
    "productName": "VibeMiner",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "publish": {
      "provider": "github",
      "owner": "chiku524",
      "repo": "crypto-miner",
      "vPrefixedTagName": true
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": true
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "nico.builds",
      "signAndEditExecutable": false
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}