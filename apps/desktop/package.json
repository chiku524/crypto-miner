{
  "name": "crypto-miner-desktop",
  "version": "1.0.0",
  "private": true,
  "author": "nico.builds",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:web": "npm run dev -w crypto-miner-web",
    "build": "electron-builder",
    "build:web": "npm run build -w crypto-miner-web",
    "start": "electron ."
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nicobuilds.vibeminer",
    "productName": "VibeMiner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": true
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "nico.builds"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}